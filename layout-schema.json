{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "spocs": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "spocs_per_domain": {
          "type": "number"
        }
      },
      "required": ["url", "spocs_per_domain"]
    },
    "layout": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "width": {
            "type": "number",
            "minimum": 1,
            "maximum": 12
          },
          "components": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "pattern": "^(Highlights|TopSites|TextPromo|Signup|Message|SectionTitle|Navigation|CollectionCardGrid|CardGrid|Hero|HorizontalRule|List)"
                },
                "properties": {
                  "type": "object"
                }
              },
              "required": ["type"]
            }
          }
        },
        "required": ["width", "components"]
      }
    }
  },
  "required": ["spocs", "layout"]
}
